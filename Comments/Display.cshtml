@model List<comment>

@{
    ViewData["Title"] = "View Task Details";
}
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Tasks" asp-action="HomePage">PGESCo Tasks Calender</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogIn">Log in</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-auto">
            <thead>
                <tr>
                    <th> <b>Comments</b></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.employee.Name)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Text)</td>
                    </tr>
                }
            </tbody>

        </table>
        <div class="text-center">
            <a class="btn btn-outline-dark"><i class="bi bi-pencil-square "></i>  Write Comment</a>
        </div>
    </div>
</div>
